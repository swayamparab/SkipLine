rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // ===============================
    // QUEUE METADATA
    // ===============================
    match /queue/{queueId} {

      // Everyone can read queue status
      allow read: if isSignedIn();

      // Admin can write anything
      allow write: if isAdmin();

      // ðŸ”¥ NON-ADMIN can ONLY update lastTokenIssued WHEN queue is open
      allow update: if
        isSignedIn() &&
        request.resource.data.diff(resource.data).changedKeys()
          .hasOnly(["lastTokenIssued", "updatedAt"]) &&
        resource.data.isOpen == true;
    }

    // ===============================
    // QUEUE MEMBERS
    // ===============================
    match /queueMembers/{uid} {

      allow read: if isSignedIn();

      allow create: if
        isSignedIn() &&
        request.auth.uid == uid &&
        get(/databases/$(database)/documents/queue/canteen).data.isOpen == true;

      allow delete: if
        isSignedIn() &&
        (request.auth.uid == uid || isAdmin());

      allow update: if false;
    }

    // ===============================
    // USERS
    // ===============================
    match /users/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;
    }

    // ===============================
    // ADMINS
    // ===============================
    match /admins/{uid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow write: if false;
    }
  }
}